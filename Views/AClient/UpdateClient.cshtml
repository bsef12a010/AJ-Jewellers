@{
    ViewBag.Title = "Update Client";
}

@model List<EAD_Project_Bootstrap.Models.Client>

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Update Admin
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <img src="~/img/Admin/dashboardb.png" alt="Comments" style="width:15px;height:15px;">  <a href="~/AHome/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        Update Admin
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h3></h3>
                        <form name="sentMessage" id="contactForm" method="post" action="../../AClient/updateExistingClient" novalidate>
                            @foreach (var a in Model)
                            {
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Client ID:</label>
                                        <input type="text" readonly="readonly" class="form-control" name="ClientID" value="@a.ClientID">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>First Name:</label>
                                        <input type="text" class="form-control" name="First_Name" value="@a.First_Name" required data-validation-required-message="Please Enter Your First Name.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Last Name:</label>
                                        <input type="text" class="form-control" name="Last_Name" value="@a.Last_Name" required data-validation-required-message="Please Enter Your Last Name.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Email:</label>
                                        <input type="text" class="form-control" name="Email" value="@a.Email" required data-validation-required-message="Please Enter Your Email">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Mailling Address:</label>
                                        <input type="text" class="form-control" name="Mailling_Address" value="@a.Mailling_Address" required data-validation-required-message="Please Enter Your Mailing Address.">
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Contact Number:</label>
                                        <input type="text" class="form-control" name="Phone" value="@a.Phone" required data-validation-required-message="Please Enter Your Phone Number.">
                                        @*@Html.TextBox("Phone", "", new { @class = "form-control" })*@
                                        <p class="help-block"></p>
                                    </div>
                                </div>


                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Description:</label>
                                        @*<input  class="form-control" name="cat1" id="cat1" required data-validation-required-message="Please enter your phone number.">*@
                                        <select name="Description" class="form-control">
                                            <option value="Company">Company</option>
                                            <option value="Individual">Individual</option>
                                        </select>
                                    </div>
                                </div>

                                @*@Html.TextBox("City", "", new { @class = "form-control" })*@

                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Method Of Payment:</label>
                                        <label for="paysys_id---0" class="radio"><input type="radio" name="Payment_Method" checked="checked" value="PayPal" id="paysys_id---0">&nbsp;PayPal : Pay With Your Paypal Account</label><br />
                                        <label for="paysys_id---1" class="radio"><input type="radio" name="Payment_Method" value="Credit Card" id="paysys_id---1">&nbsp;Credit Card : Visa / Mastercard / American Express / Discover</label><br />
                                        <label for="paysys_id---2" class="radio"><input type="radio" name="Payment_Method" value="Cash" id="paysys_id---2">&nbsp;Cash / Money Order : Mail Your Payment To Us</label>
                                    </div>
                                </div>

                                <div id="success"></div>
                                <!-- For success/fail messages -->

                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>