@model List<EAD_Project_Bootstrap.Models.Client>


<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Service Tabs -->
        <div class="row">
            <div class="col-lg-12">
                <h2 id="d1" class="page-header">Client List</h2>
            </div>
            <div class="col-lg-12">
                <ul id="myTab" class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#service-one" data-toggle="tab"><i class="fa fa-paper-plane"></i>Client List</a>
                    </li>
                    @*<li class="">
                        <a href="#service-two" data-toggle="tab"><i class="fa fa-mail-reply"></i> Active Client Accounts</a>
                    </li>
                    <li class="">
                         <a href="#service-three" data-toggle="tab"><i class="fa fa-home"></i> Inactive Client Accounts</a>
                    </li>
                        <li class="">
                            <a href="#service-four" data-toggle="tab"><i class="fa fa-male"></i> Service Four</a>
                        </li>*@
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="service-one">
                        <br />
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 ">Name</th>
                                    <th class="col-lg-1 ">Mailing Address</th>
                                    <th class="col-lg-2 ">Phone</th>
                                    <th class="col-lg-2 ">Description</th>
                                    <th class="col-lg-2 ">Payment Method</th>
                                    <th class="col-lg-2 ">Delete Client</th>
                                    <th class="col-lg-2 ">Update Client</th>
                                     
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var a in Model)
                                {
                                        <tr>
                                            <td>@a.First_Name @a.Last_Name </td>
                                            <td>@a.Mailling_Address</td>
                                            <td>@a.Phone</td>
                                            <td>@a.Description</td>
                                            <td>@a.Payment_Method</td>
                                            <td><a href="~/AClient/DeleteClient/@a.ClientID" class="col-lg-6 btn btn-danger">Delete</a></td>
                                            <td><a href="~/AClient/UpdateClient/@a.ClientID" class="col-lg-6 btn btn-primary">Update</a></td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
