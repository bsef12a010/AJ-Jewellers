@model List<EAD_Project_Bootstrap.Models.Order>

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Service Tabs -->
        <div class="row">
            <div class="col-lg-12">
                <h2 id="d1" class="page-header">Order List</h2>
            </div>
            <div class="col-lg-12">
                <ul id="myTab" class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#service-one" data-toggle="tab"><i class="fa fa-paper-plane"></i> Orders</a>
                    </li>
                    @*<li class="">
                        <a href="#service-two" data-toggle="tab"><i class="fa fa-mail-reply"></i> Inactive Orders</a>
                    </li>
                    <li class="">
                            <a href="#service-three" data-toggle="tab"><i class="fa fa-home"    ></i> Service Three</a>
                        </li>
                        <li class="">
                            <a href="#service-four" data-toggle="tab"><i class="fa fa-male"></i> Service Four</a>
                        </li>*@
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="service-one">
                        <br />
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 ">OrderID</th>
                                    <th class="col-lg-1 ">ProductID</th>
                                    <th class="col-lg-1 ">UserID</th>
                                    <th class="col-lg-1 ">Date</th>
                                    <th class="col-lg-1 ">Quantity</th>
                                    <th class="col-lg-2 ">Price</th>
                                    <th class="col-lg-2 ">Amount</th>
                                    <th class="col-lg-2 ">Delete Order</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var a in Model)
                                {
                                        <tr>
                                            <td>@a.OrderID</td>
                                            <td>@a.ProductID</td>
                                            <td>@a.UserID</td>
                                            <td>@a.Date</td>
                                            <td>@a.Quantity</td>
                                            <td>@a.Price</td>
                                            <td>@a.Amount</td>
                                            <td><a href="~/AOrder/DeleteOrder/@a.Id" class="col-lg-6 btn btn-danger btn-block">Delete</a></td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
