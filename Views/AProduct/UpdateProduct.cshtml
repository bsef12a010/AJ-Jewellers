@{
    ViewBag.Title = "Update Product";
}

@model List<EAD_Project_Bootstrap.Models.Product>

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Update Product
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <img src="~/img/Admin/dashboardb.png" alt="Comments" style="width:15px;height:15px;">  <a href="~/AHome/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        Update Product
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h3></h3>
                        <form name="sentMessage" id="contactForm" method="post" action="../../AProduct/updateExistingProduct" novalidate>
                            @foreach (var a in Model)
                            {
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>ProductID:</label>
                                        <input type="text" class="form-control" id="productID" name="ProductID" value="@a.ProductID" required data-validation-required-message="Please Enter Your Username.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Category:</label>
                                        <input type="text" class="form-control" name="Category" value="@a.Category" required data-validation-required-message="Please Enter Your Password.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Price:</label>
                                        <input type="text" class="form-control" name="Price" value="@a.Price" required data-validation-required-message="Please Enter Your Password.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Description:</label>
                                        <input type="text" class="form-control" name="Description" value="@a.Description" required data-validation-required-message="Please Enter Your Password.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Overview:</label>
                                        <input type="text" class="form-control" name="Overview" value="@a.Overview" required data-validation-required-message="Please Enter Your Password.">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="control-group form-group">
                                    <div class="controls">
                                        <label>Availability:</label>
                                        <select name="Availability" class="form-control">
                                            <option value="In Stock">In Stock</option>
                                            <option value="Out Of Stock">Out Of Stock</option>
                                        </select>
                                    </div>
                                </div>

                                <div id="success"></div>
                                <!-- For success/fail messages -->

                                <button type="submit" class="btn btn-primary btn-block">Update</button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>