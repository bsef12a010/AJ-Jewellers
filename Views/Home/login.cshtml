@{
    ViewBag.Title = "Login";
}
<!-- Page Content -->
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Sign In
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="../Home/Index">Home</a>
                </li>
                <li class="active">Sign In</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h3></h3>
                        <form name="sentMessage" action="../../Home/CheckSignIn" method="post" id="contactForm" novalidate>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>Username:</label>
                                    <input type="text" class="form-control" name="Username" id="name1" required data-validation-required-message="Please Enter Your Username.">
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>Password:</label>
                                    <input type="password" class="form-control" name="Password" id="pass1" required data-validation-required-message="Please Enter A Valid Password.">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="checkbox">
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                            <div id="success"></div>
                            <!-- For success/fail messages -->
                            <button type="submit" class="btn btn-primary">Sign In</button>
                            <br>&nbsp;<br> 
                            <div class="form-group">
                                <a href="~/Home/reset" class="forgot-password">Forgot password?</a>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Contact Details Column -->
            <div class="col-md-4">
                <div class="controls">
                    <label>Or Login With Your Facebook or Twitter Account</label>
                    <br>&nbsp;<br>
                    <p><a href="https://www.facebook.com/"><img alt="Login With Facebook" width="250" height="50" src="@Url.Content("~/img/fb.png")"></a>
                        <br>&nbsp;<br>
                        <a href="https://twitter.com/"><img alt="Login With Twitter" width="250" height="50" src="@Url.Content("~/img/tw.png")"></a></p>
                    <br>&nbsp;<br>
                    <p><b>Not a member? </b><a href="@Url.Action("signup", "Home")"><img alt="Create Account" width="150" height="40" src="@Url.Content("~/img/account.png")"></a></p>
                </div>
            </div>
    </div>
</div>
