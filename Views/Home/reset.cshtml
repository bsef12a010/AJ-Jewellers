@{
    ViewBag.Title = "Passwrod Reset";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Password Reset
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Reset</li>
            </ol>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="basic-login">
                        <form>
                            <div class="form-group">
                                <label for="restore-email"><i class="icon-envelope"></i> <b>Enter Your Email</b></label>
                                <input class="form-control" id="restore-email" type="text" placeholder="">
                            </div>
                            <br>&nbsp;<br>
                            <div class="form-group">
                                <button type="submit" class="btn pull-right">Reset Password</button>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
