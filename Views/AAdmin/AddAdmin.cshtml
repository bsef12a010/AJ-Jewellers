@{
    ViewBag.Title = "Add Admin";
}

<script>
            function func() {
                var nameEntered = $('#nameEntered').val();


                if (nameEntered == "") {
                    alert("Please Enter Username");
                    return;
                }
                $.getJSON('../../Home/checkSignUpForAlreadyExistsOrNot?userName=' + nameEntered, function (d) {
                    if (d == true) {
                        alert("Sorry! This Username Is Not Available!");


                    }

                    else if (d == false) {
                        alert("Username Is Available!");
                        document.getElementById("buttonSubmit").style.visibility = "visible";
                        document.getElementById("checkButton").style.visibility = "hidden";
                        document.getElementById("nameEntered").readOnly = "readonly";
                    }
                })

            }
</script>

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Add Admin
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <img src="~/img/Admin/dashboardb.png" alt="Comments" style="width:15px;height:15px;">  <a href="~/AHome/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        Add Admin
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h3></h3>
                        <form name="sentMessage" id="contactForm" method="post" action="../../AAdmin/insertAdmin" novalidate>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>Username:</label>
                                    <input type="text" class="form-control" name="Username" id="nameEntered" required data-validation-required-message="Please Enter Your Username.">
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>Password:</label>
                                    <input type="password" class="form-control" name="pass1" id="name" required data-validation-required-message="Please Enter Your Password.">
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>Confirm Password:</label>
                                    <input type="password" class="form-control" name="Password" id="phone" required data-validation-required-message="Please Enter Confirm Password.">
                                </div>
                            </div>



                            <div id="success"></div>
                            <!-- For success/fail messages -->

                            <button type="submit" style="visibility:hidden" id="buttonSubmit" class="btn btn-primary btn-block">Add</button>
                        </form>
                        <button id="checkButton" onclick="func()" class="btn btn-primary">Check Availability</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>